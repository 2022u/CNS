#include<string.h>
#include<ctype.h>
void main()
{
int i, key,x; 
char text[100],c;
printf("\nCaesar Cipher - Encryption");
printf("\nEnter Message To Encrypt : ");

scanf("%s",text);
printf("\nEnter Key : ");
scanf("%d", &key);
printf("\nEncrypted meassge:");
if(key>26)
 key=key%26;
for(i=0;text[i]!='\0';++i)
{
 x=text[i];
    if(x<=122 &&x>=97)
    {
        x=x+key;
        if(x>122)
        {
             x=(x%122)+96;
        }
        printf("%c",x);
        
    }
    else if(x<=90 && x>=65)
    {
        x=x+key;
        if(x>90)
        {
             x=(x%90)+64;
        }
        printf("%c",x);
    }

}
}
